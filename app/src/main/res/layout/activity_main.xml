<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xiangmu01.xiangmu01.MainActivity">





    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/radiogroup"
           >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:id="@+id/tuijian"
            android:onClick="click"
            android:textColor="@drawable/text_colour"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/bottom_recommand"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:tag="0"
            android:checked="true"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:id="@+id/fenlei"
            android:onClick="click"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/text_colour"
            android:drawableTop="@drawable/bottom_category"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:tag="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:id="@+id/sousuo"
            android:onClick="click"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/text_colour"
            android:drawableTop="@drawable/bottom_search"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:tag="2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:id="@+id/gengduo"
            android:onClick="click"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/text_colour"
            android:drawableTop="@drawable/bottom_more"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:tag="3"/>

    </RadioGroup>
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radiogroup">

    </FrameLayout>

</RelativeLayout>
